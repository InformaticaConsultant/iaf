<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="res_config_settings_event_base" model="ir.ui.view">
            <field name="name">res.conf.odoo.onlin.event</field>
            <field name="priority" eval="72"/>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Event Online" string="Online Events" name="event_online">
                        <block title="Zoom Configurations" name="Zoom Configurations">
                            <div class="content-group">
                                <div class="mt8 app_settings_block_evl_events_zoom"></div>
                                <div class="mt8 app_settings_block_evl_events_bigbluebutton"></div>
                            </div>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>
    </data>

</odoo>